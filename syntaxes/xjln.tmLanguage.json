{
	"name": "XJLN",
	"patterns": [
		{
			"include": "#keyword"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#char"
		},
		{
			"include": "#number"
		},
		{
			"include": "#operator"
		}
	],
	"repository": {
		"comment": {
			"name": "comment.xjln",
			"match": "#[^\n]*"
		},
		"keyword": {
			"name": "keyword.xjln",
			"match": "use|from|as|return|if|else|while|var|int|double|long|short|float|boolean|byte|char|true|false|def|class"
		},
		"strings": {
			"name": "string.xjln",
			"match": "\".*\""
		},
		"char": {
			"name": "char.xjln",
			"match": "'.'"
		},
		"number": {
			"name": "number.xjln",
			"match": "[0-9]+(.[0-9]+)?"
		},
		"operator": {
			"name": "operator.xjln",
			"match": "[-+*/%&|<>=!^]+"
		}
	},
	"scopeName": "source.xjln"
}